---
import { type BlogSchema } from "../content.config";
import BaseLayout from "./BaseLayout.astro";
import JsonLd from "../components/JsonLd.astro";
import { Image } from "astro:assets";

export interface Props extends BlogSchema {}

const rawBase = import.meta.env.BASE_URL;
const base = rawBase.endsWith('/') ? rawBase : rawBase + '/';

const { title, description, pubDate, updatedDate, heroImage, badge, tags = [] } = Astro.props;

// Prepend base URL to heroImage if it's a root-relative path
const resolvedHeroImage = typeof heroImage === 'string' && heroImage.startsWith('/')
  ? base + heroImage.slice(1)
  : heroImage;

// Format dates using native Intl.DateTimeFormat (zero bundle cost)
const dateFormatter = new Intl.DateTimeFormat('en-US', {
  month: 'short',
  day: 'numeric',
  year: 'numeric'
});
const displayDate = dateFormatter.format(pubDate);
const displayUpdatedDate = updatedDate ? dateFormatter.format(updatedDate) : null;

const articleData = {
  headline: title,
  description: description,
  datePublished: pubDate.toISOString(),
  ...(updatedDate && { dateModified: updatedDate.toISOString() }),
  ...(heroImage && { image: new URL(heroImage, Astro.site).toString() }),
  url: Astro.url.toString(),
};
---

<BaseLayout title={title} description={description} ogType="article">
  <JsonLd type="Article" data={articleData} />
  <main class="md:flex md:justify-center">
    <article class="prose prose-lg max-w-[750px] prose-img:mx-auto">
      {resolvedHeroImage && typeof resolvedHeroImage === 'string' ? (
        <img width={750} height={422} loading="eager" src={resolvedHeroImage} alt={title} class="w-full mb-6" />
      ) : resolvedHeroImage && (
        <Image width={750} height={422} format="webp" quality={80} loading="eager" src={resolvedHeroImage} alt={title} class="w-full mb-6" />
      )}
      <h1 class="title my-2 text-4xl font-bold">{title}</h1>
      {pubDate && <time>{displayDate}</time>}
      <br />
      {badge && <div class="badge badge-secondary my-1">{badge}</div>}
      {
        tags &&
          tags.map((tag) => (
            <a href={`${base}blog/tag/${tag}`} class="badge badge-outline ml-2 no-underline">
              {tag}
            </a>
          ))
      }
      {
        displayUpdatedDate && (
          <div>
            {" "}
            Last updated on <time>{displayUpdatedDate}</time>{" "}
          </div>
        )
      }
      <div class="divider my-2"></div>
      <slot />
    </article>
  </main>
</BaseLayout>
