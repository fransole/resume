---
// Active menu item is determined dynamically via URL in the script below
---

<ul class="menu grow shrink menu-md overflow-y-auto">
    <li><a class="py-3 text-base hover:bg-accent hover:text-accent-content transition-colors" id="home" href="/">Home</a></li>
    <li><a class="py-3 text-base hover:bg-accent hover:text-accent-content transition-colors" id="resume" href="/resume">Resume</a></li>
    <li><a class="py-3 text-base hover:bg-accent hover:text-accent-content transition-colors" id="blog" href="/blog/">Blog</a></li>
    <li><a class="py-3 text-base hover:bg-accent hover:text-accent-content transition-colors" id="pottery" href="/pottery">Pottery</a></li>
</ul>

<script>
const MENU_LISTENER_KEY = '__menuListenerAttached';

function updateActiveMenuItem() {
  const activeClass = 'bg-base-300';

  // Remove active class from all menu items
  document.querySelectorAll('.menu a').forEach(el => {
    el.classList.remove(activeClass);
  });

  // Always determine active item from current URL
  const path = window.location.pathname;
  let activeId = 'home';

  if (path === '/' || path === '/index.html') activeId = 'home';
  else if (path.startsWith('/resume')) activeId = 'resume';
  else if (path.startsWith('/blog')) activeId = 'blog';
  else if (path.startsWith('/pottery')) activeId = 'pottery';

  const activeItemElem = document.getElementById(activeId);
  activeItemElem && activeItemElem.classList.add(activeClass);
}

// Run on initial load
updateActiveMenuItem();

// Add listener only once to prevent accumulation
if (!(window as any)[MENU_LISTENER_KEY]) {
  (window as any)[MENU_LISTENER_KEY] = true;
  document.addEventListener('astro:page-load', updateActiveMenuItem);
}
</script>
