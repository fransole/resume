import BaseLayout from "../layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

// Image descriptions for accessibility
const imageDescriptions: Record<string, string> = {
  "Amber Canisters": "A trio of wheel-thrown canisters glowing with honeyed amber tones, topped with hand-fitted wooden lids",
  "Amber Yarn": "A yarn bowl bathed in warm amber glaze, its spiral cutaway guiding yarn like a river through stone",
  "Berry Bowl": "A berry bowl with constellation-like drainage holes, cradled by its matching saucer below",
  "Blue Canisters": "Three canisters dressed in deep midnight blue, sealed with natural cork",
  "Bronze Canisters": "Graduated canisters shimmering with metallic bronze, catching light like ancient artifacts",
  "Carved Cup": "A cup wearing hand-carved patterns across its surface, each line a deliberate meditation",
  "Celadon Bowls": "Nesting bowls draped in jade-green celadon, an homage to centuries of ceramic tradition",
  "Collection Display": "A family portrait of handmade vessels, each piece in quiet conversation with the others",
  "Dipped Plates": "Plates split between two worlds of color, where one glaze meets another in perfect horizon lines",
  "Earth Canisters": "Storage vessels rooted in the rich browns and tans of freshly turned soil",
  "Earth Colander": "A colander dressed in earth tones, its holes arranged like seeds waiting to sprout",
  "Earth Mugs": "Mugs layered with the striated colors of canyon walls and river sediment",
  "Flask Collection": "An ensemble of decorative flasks, each surface telling a different glaze story",
  "Forest Mug": "A solitary mug wrapped in deep forest green, textured like bark and moss",
  "Forest Mugs": "Mugs gathered like trees in a grove, their surfaces alive with organic textures",
  "Gaiwan Set": "A traditional gaiwan resting on its saucer, lid poised for the ritual of tea",
  "Geometric Teapot": "A teapot carved into geometric facets, where ancient form meets modern angles",
  "Honey Canisters": "Canisters glowing with the golden warmth of sunlit honey",
  "Iron Cup": "A cup fired with iron-rich glaze, dark and metallic as a blacksmith's forge",
  "Landscape Mugs": "Mugs painted in layers of glaze that rise like distant mountain ranges at dawn",
  "Leaf Bowls": "Bowls imprinted with pressed leaves, nature's fossils captured in clay",
  "Leaf Mugs": "Mugs adorned with botanical impressions, bringing the garden to your morning coffee",
  "Leaf Trio": "Three pieces united by leaf-inspired motifs, a small forest in ceramic form",
  "Moon Flask": "A flat, circular flask with a cratered surface reminiscent of lunar landscapes",
  "Moss Vase": "A vase textured like forest floor moss, inviting touch as much as sight",
  "Nesting Bowls": "Bowls designed to embrace one another, stacking like memories inside memories",
  "Ocean Mugs": "Mugs swirling with blue-green glazes, captured waves frozen mid-motion",
  "Penguin Vase": "A whimsical vase shaped into a penguin, personality glazed into every curve",
  "Plate Stack": "A tower of handmade plates, each rim slightly different from the last",
  "Ribbed Cups": "Cups wrapped in horizontal ridges, creating rhythm beneath your fingertips",
  "Sake Set": "A sake bottle accompanied by small cups, ready for quiet toasts and shared moments",
  "Sheep Pair": "Two ceramic sheep standing guard, wooly and watchful in their stillness",
  "Sheep Vase": "A vase graced with sheep motifs, pastoral charm in fired clay",
  "Speckled Bowls": "Bowls dusted with glaze speckles like stars scattered across a night sky",
  "Spiral Bowls": "Bowls carved with spiraling patterns, echoing the motion of the potter's wheel",
  "Splatter Jar": "A jar alive with splattered glaze, controlled chaos frozen in the kiln",
  "Stacked Bowls": "Graduated bowls arranged in a tower, showing off their harmonious proportions",
  "Stacking Bowls": "Bowls engineered to nest together, space-saving design meets handmade craft",
  "Sunrise Mugs": "Mugs glazed in gradient warmth, from deep burgundy through peach to golden yellow",
  "Sunrise Pair": "A matched pair of mugs sharing the colors of early morning sky",
  "Symbol Mugs": "Mugs etched with carved symbols, each mark carrying its own quiet meaning",
  "Textured Bowls": "Bowls with surfaces that beg to be touched, rough and smooth in conversation",
  "Vase Duo": "Two vases standing together, complementary shapes sharing the same glaze palette",
  "Yarn Bowls": "Functional vessels designed for fiber artists, keeping yarn tamed and flowing",
};

// Import all images from the pottery folder
const imageModules = import.meta.glob<{ default: ImageMetadata }>(
  "../images/pottery/*.{jpeg,jpg,png,gif,webp}",
  { eager: true }
);

// Import raw image URLs for lightbox (unprocessed)
const rawImages = import.meta.glob<string>(
  "../images/pottery/*.{jpeg,jpg,png,gif,webp}",
  { eager: true, import: 'default', query: '?url' }
);

// Convert to array and extract label from filename
const images = Object.entries(imageModules).map(([path, module]) => {
  const filename = path.split("/").pop() || "";
  const label = filename.replace(/\.(jpeg|jpg|png|gif|webp)$/i, "");
  const description = imageDescriptions[label] || `Handmade ceramic piece: ${label}`;
  const rawPath = rawImages[path]; // Get unprocessed URL for lightbox

  return {
    src: module.default,    // ImageMetadata for optimized thumbnails
    rawSrc: rawPath,        // String URL for lightbox (unprocessed)
    label,
    filename,
    description,
  };
});

// Sort images alphabetically by label
images.sort((a, b) => a.label.localeCompare(b.label));
---

<BaseLayout
  title="Handmade Ceramic Pottery by John Dorion"
  description="Wheel-thrown ceramic art including bowls, mugs, vases, and functional pottery pieces. Explore my handcrafted ceramics featuring unique glazes and traditional techniques."
  showCCLicense={true}
>
  <div class="mb-5 flex justify-between items-start">
    <h1 class="text-3xl w-full font-bold">Pottery</h1>
    <button id="sidebar-toggle" class="btn btn-sm btn-ghost hidden lg:flex gap-2" title="Toggle sidebar" aria-expanded="true">
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><rect x="3" y="3" width="18" height="18" rx="2"/><line x1="9" y1="3" x2="9" y2="21"/></svg>
      <span class="toggle-text">Hide sidebar</span>
    </button>
  </div>

  <div class="mb-10 text-justify">
    I throw on the wheel and experiment with making my own glazes in my home studio. My favorite things to make are big vases and mugs. I'm drawn to nature-inspired textures - mosses, mushrooms, organic geometry - and I like building up lots of layers in both glaze and surface design. Lately I've been exploring ways to incorporate electronics into ceramic forms.
  </div>

  <div class="mb-6 flex gap-3">
    <a class="btn btn-outline border-primary text-primary hover:bg-primary hover:text-primary-content hover:border-primary transition-colors gap-2" href="https://www.instagram.com/dorion_ceramics" target="_blank" rel="noopener noreferrer">
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
      Instagram
    </a>
    <a class="btn btn-outline border-accent text-accent hover:bg-accent hover:text-accent-content hover:border-accent transition-colors gap-2" href="https://etsy.com/shop/DorionCeramic" target="_blank" rel="noopener noreferrer">
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="9" cy="21" r="1"/><circle cx="20" cy="21" r="1"/><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/></svg>
      Shop
    </a>
  </div>

  <div class="gallery mb-10" id="gallery">
    {images.map((image, index) => (
      <article class="gallery-item">
        <a
          href={image.rawSrc}
          data-fancybox="gallery"
          data-caption={image.label}
        >
          <Image
            src={image.src}
            alt={image.description}
            width={image.src.width}
            height={image.src.height}
            format="webp"
            quality={80}
            loading={index < 4 ? "eager" : "lazy"}
          />
        </a>
        <span class="label">{image.label}</span>
      </article>
    ))}
  </div>

  <script>
    // Fancybox loaded lazily on first gallery click
    // Use Promise pattern to handle race conditions on rapid clicks
    let fancyboxLoadPromise: Promise<void> | null = null;
    let FancyboxModule: typeof import("@fancyapps/ui").Fancybox | null = null;

    // AbortController for cleaning up event listeners on navigation
    let galleryAbortController: AbortController | null = null;
    let sidebarAbortController: AbortController | null = null;

    // Shared sidebar state management
    function getSidebarCollapsed(): boolean {
      try {
        return sessionStorage.getItem('sidebar-collapsed') === 'true';
      } catch {
        return false;
      }
    }

    function setSidebarCollapsed(collapsed: boolean): void {
      try {
        sessionStorage.setItem('sidebar-collapsed', collapsed ? 'true' : 'false');
      } catch {
        // Ignore storage errors (quota exceeded, etc.)
      }
    }

    function applySidebarState(collapsed: boolean): void {
      const drawer = document.querySelector('.drawer');
      if (!drawer) return; // Early return if drawer not found

      const toggleBtn = document.getElementById('sidebar-toggle');
      const toggleText = toggleBtn?.querySelector('.toggle-text');

      if (collapsed) {
        drawer.classList.add('sidebar-collapsed');
        if (toggleText) toggleText.textContent = 'Show sidebar';
        toggleBtn?.setAttribute('aria-expanded', 'false');
      } else {
        drawer.classList.remove('sidebar-collapsed');
        if (toggleText) toggleText.textContent = 'Hide sidebar';
        toggleBtn?.setAttribute('aria-expanded', 'true');
      }
    }

    async function loadFancybox(): Promise<void> {
      // Use Promise pattern to handle concurrent calls (rapid clicks)
      if (fancyboxLoadPromise) return fancyboxLoadPromise;

      fancyboxLoadPromise = (async () => {
        // Dynamically load CSS from CDN
        const link = document.createElement('link');
        link.rel = 'stylesheet';
        link.href = 'https://cdn.jsdelivr.net/npm/@fancyapps/ui@5.0/dist/fancybox/fancybox.css';
        document.head.appendChild(link);

        // Wait for CSS to load before initializing
        await new Promise<void>((resolve) => {
          link.onload = () => resolve();
          link.onerror = () => {
            console.warn('Fancybox CSS failed to load');
            resolve(); // Continue even if CSS fails - Fancybox still works
          };
        });

        // Dynamically import JS with error handling
        try {
          const { Fancybox } = await import("@fancyapps/ui");
          FancyboxModule = Fancybox;

          // Bind to gallery elements
          Fancybox.bind('[data-fancybox="gallery"]', {
            Thumbs: false,
            Toolbar: {
              display: {
                left: [],
                middle: [],
                right: ["close"],
              },
            },
            Images: { zoom: true },
            Carousel: { transition: "slide" },
            on: {
              close: () => {
                applySidebarState(getSidebarCollapsed());
              }
            }
          });
        } catch (err) {
          console.warn('Failed to load Fancybox:', err);
          fancyboxLoadPromise = null; // Reset so user can retry
        }
      })();

      return fancyboxLoadPromise;
    }

    function initGalleryClickHandler(): void {
      const gallery = document.getElementById('gallery');
      if (!gallery) return;

      // Abort any existing controller before creating new one
      galleryAbortController?.abort();
      galleryAbortController = new AbortController();

      gallery.addEventListener('click', async (e) => {
        const target = e.target as HTMLElement;
        const link = target.closest('[data-fancybox="gallery"]');
        if (!link) return;

        // If Fancybox not loaded yet, load it and then trigger the click
        if (!fancyboxLoadPromise) {
          e.preventDefault();
          await loadFancybox();
          // Re-trigger the click after loading (if Fancybox loaded successfully and element still in DOM)
          if (FancyboxModule && link instanceof HTMLElement && document.contains(link)) {
            link.click();
          }
        }
      }, { signal: galleryAbortController.signal });
    }

    function cleanupFancybox(): void {
      // Abort event listeners
      galleryAbortController?.abort();
      galleryAbortController = null;
      sidebarAbortController?.abort();
      sidebarAbortController = null;

      // Cleanup Fancybox
      if (FancyboxModule) {
        FancyboxModule.destroy();
        FancyboxModule = null;
      }
      fancyboxLoadPromise = null;
    }

    function initSidebarToggle(): void {
      const toggleBtn = document.getElementById('sidebar-toggle');
      const drawer = document.querySelector('.drawer');

      // Early returns before any operations
      if (!drawer || !toggleBtn) {
        // Still apply saved state if drawer exists (even without toggle button)
        if (drawer) applySidebarState(getSidebarCollapsed());
        return;
      }

      // Restore saved state on init
      applySidebarState(getSidebarCollapsed());

      // Abort any existing controller before creating new one
      sidebarAbortController?.abort();
      sidebarAbortController = new AbortController();

      toggleBtn.addEventListener('click', () => {
        if (!drawer) return;
        const isCollapsed = drawer.classList.toggle('sidebar-collapsed');
        setSidebarCollapsed(isCollapsed);
        toggleBtn.setAttribute('aria-expanded', isCollapsed ? 'false' : 'true');
        const toggleText = toggleBtn.querySelector('.toggle-text');
        if (toggleText) {
          toggleText.textContent = isCollapsed ? 'Show sidebar' : 'Hide sidebar';
        }
      }, { signal: sidebarAbortController.signal });
    }

    // Initialize only via astro:page-load (fires on initial load + View Transitions)
    document.addEventListener('astro:page-load', () => {
      // Only run on pottery page
      if (!window.location.pathname.startsWith('/pottery')) return;
      initGalleryClickHandler();
      initSidebarToggle();
    });

    // Cleanup when navigating away
    document.addEventListener('astro:before-swap', () => {
      cleanupFancybox();
    });
  </script>
</BaseLayout>

<style>
  /* Sidebar toggle */
  :global(.drawer.sidebar-collapsed) {
    grid-template-columns: 0 1fr;
  }

  :global(.sidebar-collapsed .drawer-side) {
    transform: translateX(-100%);
    width: 0;
    opacity: 0;
    overflow: hidden;
  }

  :global(.sidebar-collapsed .drawer-content) {
    width: 100vw;
    max-width: 100vw;
  }

  :global(.sidebar-collapsed main) {
    max-width: 100%;
    width: 100%;
  }

  /* Photo Grid */
  .gallery {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: clamp(8px, 1vw, 16px);
  }

  .gallery-item {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    border-radius: 0.5rem;
  }

  .gallery-item a {
    display: block;
    width: 100%;
    height: 100%;
    text-decoration: none;
    color: inherit;
    cursor: pointer;
  }

  .gallery-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .gallery-item:hover img {
    transform: scale(1.02);
  }

  .gallery-item:hover {
    box-shadow: 0 0 0 3px #C8B482;
  }

  .gallery-item .label {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 2rem 1rem 0.75rem;
    background: linear-gradient(to top, rgba(31, 31, 40, 0.9) 0%, rgba(31, 31, 40, 0) 100%);
    font-size: clamp(0.75rem, 1.5vw, 0.875rem);
    font-weight: 500;
    opacity: 0;
    transform: translateY(10px);
    transition: opacity 0.3s ease, transform 0.3s ease;
    pointer-events: none;
  }

  .gallery-item:hover .label,
  .gallery-item:focus-within .label {
    opacity: 1;
    transform: translateY(0);
  }

  @media (hover: none) {
    .gallery-item .label {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .gallery-item a:focus { outline: none; }
  .gallery-item a:focus-visible {
    outline: 2px solid theme('colors.primary');
    outline-offset: 2px;
  }

  /* Fancybox customization */
  :global(.fancybox__container) {
    --fancybox-bg: rgba(31, 31, 40, 0.98);
  }

  :global(.fancybox__toolbar) {
    --fancybox-color: theme('colors.base-content');
  }

  :global(.fancybox__caption) {
    font-size: 1rem;
    padding: 1rem;
    text-align: center;
  }

  @media (prefers-reduced-motion: reduce) {
    .gallery-item img {
      transition: none;
    }

    .gallery-item .label {
      transition: none;
    }

    :global(.sidebar-collapsed .drawer-side) {
      transition: none;
    }
  }
</style>
