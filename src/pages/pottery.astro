      Instagram
    </a>
    <a class="btn btn-outline border-accent text-accent hover:bg-accent hover:text-accent-content hover:border-accent transition-colors gap-2" href="https://etsy.com/shop/DorionCeramic" target="_blank">
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="9" cy="21" r="1"/><circle cx="20" cy="21" r="1"/><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/></svg>
      Shop
    </a>
  </div>

  <div class="gallery mb-10" id="gallery">
    {images.map((image, index) => (
      <article class="gallery-item">
        <a
          data-fancybox="gallery"
          data-caption={image.label}
          data-src={image.src.src}
        >
          <Image
            src={image.src}
            alt={image.label}
            width={image.src.width}
            height={image.src.height}
            format="webp"
            quality={80}
            loading={index < 12 ? "eager" : "lazy"}
          />
        </a>
        <span class="label">{image.label}</span>
      </article>
    ))}
  </div>

  <script>
    import { Fancybox } from "@fancyapps/ui";
    Fancybox.bind('[data-fancybox="gallery"]', {
      Thumbs: false,
      Toolbar: {
        display: {
          left: [],
          middle: [],
          right: ["close"],
        },
      },
      Images: { zoom: true },
      Carousel: { transition: "slide" },
    });

    // Sidebar toggle functionality - use astro:page-load for View Transitions support
    function initSidebarToggle() {
      const toggleBtn = document.getElementById('sidebar-toggle');
      const drawer = document.querySelector('.drawer');
      const toggleText = toggleBtn?.querySelector('.toggle-text');

      // Remove any existing listeners by cloning
      if (toggleBtn) {
        const newBtn = toggleBtn.cloneNode(true) as HTMLElement;
        toggleBtn.parentNode?.replaceChild(newBtn, toggleBtn);

        const newToggleText = newBtn.querySelector('.toggle-text');
        newBtn.addEventListener('click', () => {
          const isCollapsed = drawer?.classList.toggle('sidebar-collapsed');
          if (newToggleText) {
            newToggleText.textContent = isCollapsed ? 'Show sidebar' : 'Hide sidebar';
          }
        });
      }
    }

    // Run on initial load and after each navigation
    initSidebarToggle();
    document.addEventListener('astro:page-load', initSidebarToggle);
  </script>
</BaseLayout>

<style>
  /* Sidebar toggle */
  :global(.drawer.sidebar-collapsed) {
    grid-template-columns: 0 1fr;
  }

  :global(.sidebar-collapsed .drawer-side) {
    transform: translateX(-100%);
    width: 0;
    opacity: 0;
    overflow: hidden;
  }

  :global(.sidebar-collapsed .drawer-content) {
    width: 100vw;
    max-width: 100vw;
  }

  :global(.sidebar-collapsed main) {
    max-width: 100%;
    width: 100%;
  }

  /* Photo Grid */
  .gallery {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: clamp(8px, 1vw, 16px);
  }

  .gallery-item {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    border-radius: 0.5rem;
  }

  .gallery-item a {
    display: block;
    width: 100%;
    height: 100%;
    text-decoration: none;
    color: inherit;
    cursor: pointer;
  }

  .gallery-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .gallery-item:hover img {
    transform: scale(1.02);
  }

  .gallery-item .label {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 2rem 1rem 0.75rem;
    background: linear-gradient(to top, rgba(31, 31, 40, 0.9) 0%, rgba(31, 31, 40, 0) 100%);
    font-size: clamp(0.75rem, 1.5vw, 0.875rem);
    font-weight: 500;
    opacity: 0;
    transform: translateY(10px);
    transition: opacity 0.3s ease, transform 0.3s ease;
    pointer-events: none;
  }

  .gallery-item:hover .label,
  .gallery-item:focus-within .label {
    opacity: 1;
    transform: translateY(0);
  }

  @media (hover: none) {
    .gallery-item .label {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .gallery-item a:focus { outline: none; }
  .gallery-item a:focus-visible {
    outline: 2px solid theme('colors.primary');
    outline-offset: 2px;
  }

  /* Fancybox customization */
  :global(.fancybox__container) {
    --fancybox-bg: rgba(31, 31, 40, 0.98);
  }

  :global(.fancybox__toolbar) {
    --fancybox-color: theme('colors.base-content');
  }

  :global(.fancybox__caption) {
    font-size: 1rem;
    padding: 1rem;
    text-align: center;
  }
</style>
