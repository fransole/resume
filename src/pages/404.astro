---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="404: Not Found" includeSidebar={false}>
  <div class="not-found-container">
    <!-- Floating background logos -->
    <div class="floating-logos" aria-hidden="true">
      {Array.from({ length: 12 }).map((_, i) => (
        <svg class={`bg-logo bg-logo-${i}`} viewBox="0 0 256 256">
          <path d="M56.1,156c0-35.5,20.9-93.1,34.2-109.1c13-15.6,46.9-14.4,61.3,0c95,95,34.2,73.6,34.2,109.1c0,35.5-29.1,64.3-64.8,64.3C85.2,220.3,56.1,191.5,56.1,156z M151.1,86.3c3.4,0,6.1,2.7,6.1,6.1s-2.7,6.1-6.1,6.1s-6.1-2.7-6.1-6.1S147.7,86.3,151.1,86.3z M120.7,37.7c13.4,0,24.3,3.6,24.3,8.1s-10.9,8.1-24.3,8.1s-24.3-3.6-24.3-8.1S107.3,37.7,120.7,37.7z" />
        </svg>
      ))}
    </div>

    <div class="text-center relative z-10">
      <div class="main-logo-container">
        <svg class="main-logo" viewBox="0 0 256 256">
          <path d="M56.1,156c0-35.5,20.9-93.1,34.2-109.1c13-15.6,46.9-14.4,61.3,0c95,95,34.2,73.6,34.2,109.1c0,35.5-29.1,64.3-64.8,64.3C85.2,220.3,56.1,191.5,56.1,156z M151.1,86.3c3.4,0,6.1,2.7,6.1,6.1s-2.7,6.1-6.1,6.1s-6.1-2.7-6.1-6.1S147.7,86.3,151.1,86.3z M120.7,37.7c13.4,0,24.3,3.6,24.3,8.1s-10.9,8.1-24.3,8.1s-24.3-3.6-24.3-8.1S107.3,37.7,120.7,37.7z" />
        </svg>
      </div>
      <h1 class="text-9xl font-bold mb-2 text-accent">404</h1>
      <h3 class="text-2xl mb-2">Looks like this page wandered off.</h3>
      <p class="text-base-content/60 mb-8">Maybe it's out making pottery somewhere.</p>
      <a class="btn btn-accent" href="/">Take me home</a>
    </div>
  </div>
</BaseLayout>

<style>
  .not-found-container {
    position: relative;
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .floating-logos {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .bg-logo {
    position: absolute;
    fill: #C0A36E;
    opacity: 0.08;
    animation: float 20s ease-in-out infinite;
  }

  .bg-logo-0 { width: 60px; top: 5%; left: 10%; animation-delay: 0s; }
  .bg-logo-1 { width: 40px; top: 15%; right: 15%; animation-delay: -2s; }
  .bg-logo-2 { width: 80px; top: 60%; left: 5%; animation-delay: -4s; }
  .bg-logo-3 { width: 50px; top: 70%; right: 10%; animation-delay: -6s; }
  .bg-logo-4 { width: 35px; top: 30%; left: 20%; animation-delay: -8s; }
  .bg-logo-5 { width: 70px; top: 80%; left: 30%; animation-delay: -10s; }
  .bg-logo-6 { width: 45px; top: 10%; left: 60%; animation-delay: -12s; }
  .bg-logo-7 { width: 55px; top: 50%; right: 25%; animation-delay: -14s; }
  .bg-logo-8 { width: 30px; top: 40%; left: 8%; animation-delay: -16s; }
  .bg-logo-9 { width: 65px; top: 85%; right: 35%; animation-delay: -18s; }
  .bg-logo-10 { width: 38px; top: 25%; right: 5%; animation-delay: -3s; }
  .bg-logo-11 { width: 48px; top: 55%; left: 45%; animation-delay: -7s; }

  @keyframes float {
    0%, 100% {
      transform: translateY(0) rotate(0deg);
    }
    25% {
      transform: translateY(-15px) rotate(5deg);
    }
    50% {
      transform: translateY(-5px) rotate(-3deg);
    }
    75% {
      transform: translateY(-20px) rotate(3deg);
    }
  }

  .main-logo-container {
    display: flex;
    justify-content: center;
    margin-bottom: 1rem;
  }

  .main-logo {
    width: 120px;
    height: 120px;
    fill: #C0A36E;
    animation: pulse-glow 3s ease-in-out infinite;
  }

  @keyframes pulse-glow {
    0%, 100% {
      transform: scale(1);
      filter: drop-shadow(0 0 10px rgba(192, 163, 110, 0.3));
    }
    50% {
      transform: scale(1.05);
      filter: drop-shadow(0 0 20px rgba(192, 163, 110, 0.6));
    }
  }
</style>
