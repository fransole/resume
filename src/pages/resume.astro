<style>
  .flip-card {
    perspective: 1000px;
    height: 140px;
  }

  .flip-card-inner {
    position: relative;
    width: 100%;
    height: 100%;
    transition: transform 0.6s;
    transform-style: preserve-3d;
  }

  /* Desktop: flip on hover or keyboard interaction */
  @media (min-width: 768px) {
    .flip-card:hover .flip-card-inner,
    .flip-card.flipped .flip-card-inner {
      transform: rotateY(180deg);
    }
  }

  /* Mobile: flip when tapped (flipped class) */
  @media (max-width: 767px) {
    .flip-card.flipped .flip-card-inner {
      transform: rotateY(180deg);
    }
  }

  /* Keyboard focus styles */
  .flip-card:focus {
    outline: 2px solid #C8B482;
    outline-offset: 4px;
  }

  .flip-card:focus-visible {
    outline: 2px solid #C8B482;
    outline-offset: 4px;
  }

  /* Demo flip animation for first card */
  @keyframes demo-flip {
    0%, 100% { transform: rotateY(0deg); }
    25%, 75% { transform: rotateY(180deg); }
  }

  .flip-card.demo-flip .flip-card-inner {
    animation: demo-flip 1.5s ease-in-out;
  }

  .flip-card-front,
  .flip-card-back {
    position: absolute;
    width: 100%;
    height: 100%;
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
  }

  .flip-card-back {
    transform: rotateY(180deg);
    background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
    color: #C8B482;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 1.5rem;
  }

  .flip-card-back p {
    font-size: 0.875rem;
    line-height: 1.5;
    font-weight: 500;
    margin: 0;
  }

  @media (prefers-reduced-motion: reduce) {
    .flip-card-inner {
      transition: none;
    }
  }
</style>

<script>
  let flipCardsAbortController: AbortController | null = null;
  let demoTimeouts: ReturnType<typeof setTimeout>[] = [];
  let flipCardsListenerAttached = false;

  function initFlipCards() {
    // Clean up previous event listeners
    flipCardsAbortController?.abort();
    flipCardsAbortController = new AbortController();

    // Clear any existing demo timeouts
    demoTimeouts.forEach(clearTimeout);
    demoTimeouts = [];

    const cards = document.querySelectorAll('.flip-card');

    cards.forEach((card, index) => {
      // Make card focusable and accessible
      card.setAttribute('tabindex', '0');
      card.setAttribute('role', 'button');

      // Get the card title for aria-label
      const titleElement = card.querySelector('.card-title');
      const title = titleElement?.textContent || 'Achievement card';
      card.setAttribute('aria-label', `${title} - interactive card, press Enter or Space to reveal details`);
      card.setAttribute('aria-expanded', 'false');

      // Add tap/click toggle for touch devices
      card.addEventListener('click', (e) => {
        // Only toggle on mobile or if not hovering
        if (window.innerWidth < 768) {
          e.preventDefault();
          const isFlipped = card.classList.toggle('flipped');
          card.setAttribute('aria-expanded', isFlipped ? 'true' : 'false');
        }
      }, { signal: flipCardsAbortController!.signal });

      // Add keyboard navigation support
      card.addEventListener('keydown', (e) => {
        if ((e as KeyboardEvent).key === 'Enter' || (e as KeyboardEvent).code === 'Space') {
          e.preventDefault();
          const isFlipped = card.classList.toggle('flipped');
          card.setAttribute('aria-expanded', isFlipped ? 'true' : 'false');
        }
      }, { signal: flipCardsAbortController!.signal });

      // Demo flip on first card only if motion is preferred
      if (index === 0 && !window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
        const timeout1 = setTimeout(() => {
          card.classList.add('demo-flip');
          // Remove demo class after animation completes
          const timeout2 = setTimeout(() => {
            card.classList.remove('demo-flip');
          }, 1500); // Match animation duration
          demoTimeouts.push(timeout2);
        }, 500); // Wait 500ms after page load to start demo
        demoTimeouts.push(timeout1);
      }
    });
  }

  // Run on initial page load
  initFlipCards();

  // Re-run when navigating via View Transitions (guard against duplicates)
  if (!flipCardsListenerAttached) {
    flipCardsListenerAttached = true;
    document.addEventListener('astro:page-load', initFlipCards);
  }

  // Clean up on navigation
  document.addEventListener('astro:before-swap', () => {
    demoTimeouts.forEach(timeout => {
      if (timeout) clearTimeout(timeout);
    });
    demoTimeouts = [];
    flipCardsAbortController?.abort();
    flipCardsAbortController = null;
  });
</script>
